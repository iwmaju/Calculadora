n1 = float(input("Digite um número:"))
n2 = float(input("Digite um número:"))
operacao = int(input("Escolha uma das operações: (1) Adição, (2) Subtração, (3) Multiplicação ou (4) Divisão:"))

if operacao == 1:
    print ("A soma dos números é:", n1 + n2)

elif operacao == 2:
    print ("A subtração dos números é:", n1 + n2)

elif operacao == 3:
    print ("A multiplicação dos números é:", n1 * n2)

elif operacao == 4:
    print ("A divisão dos números é:", n1 / n2)

else:
    print ("Digite o número novamente")
